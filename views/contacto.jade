
extends partials/layout.jade

block vars
  - var title='Home'



block extra-scripts
  script(src="https://maps.googleapis.com/maps/api/js")
  //- build:js /scripts/contacto.js
  script(src="/bower_components/gmaps/gmaps.min.js")
  script(src="/js/contacto.js")
  //- endbuild

block page-content
  - var active = 'contacto'
  include partials/navbar
  .container
    .row
      img.img-responsive(src="/img/contacto/oficina.jpg")

    .row.bottom-offset-half
      .col-xs-12
        h4 Dirección
        p Edificio corporativo Alférez Real 1380 - Providencia - Santiago Chile
        h4 Teléfonos
        p (+56-2) 22473570 - (+56-2) 22473580
        h4 Mail
        p
          a(href="mailto:ventas@bioscom.cl") ventas@bioscom.cl
    #map.row




  .container
    form(role='form', action='', method='post')
      .col-md-offset-3.col-md-6
        h3 Contáctenos
        .well.well-sm
          strong
            i.glyphicon.glyphicon-ok
            |  Campos requeridos
        .form-group
          .input-group
            input#InputName.form-control(type='text', name='InputName', placeholder='Nombre', required='')
            span.input-group-addon
              i.glyphicon.glyphicon-ok.form-control-feedback
        .form-group
          .input-group
            input#InputEmail.form-control(type='email', name='InputEmail', placeholder='Email', required='')
            span.input-group-addon
              i.glyphicon.glyphicon-ok.form-control-feedback
        .form-group
          .input-group
            textarea#InputMessage.form-control(name='InputMessage', rows='5', required='', placeholder="Mensaje")
            span.input-group-addon
              i.glyphicon.glyphicon-ok.form-control-feedback
        input#submit.btn.btn-info.pull-right(type='submit', name='submit', value='Enviar')











